<%= render "error_message"%>
<table>
<%= form_for([@user], :url => {:controller=>"users",  :action=>"allow_login"}, method: :put) do |f| %>
<tr>
<td><%= f.label :email%></td>
<td><%= f.text_field :email%></td>
</tr>
<tr>
<td><%= f.label :password%></td>
